<UserControl x:Class="Gui.views.Log"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gui"
             xmlns:vm="clr-namespace:Gui.vm"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
    <DataGrid  ItemsSource="{Binding LogsCollection}" AutoGenerateColumns="False" CanUserAddRows="False"
        HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Type" Width="1*" Binding="{Binding Path=Type}">
                </DataGridTextColumn>
                <DataGridTextColumn Header="Message" Width="9*" Binding="{Binding Path=Message}">
                    
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
            </Grid>

</UserControl>
